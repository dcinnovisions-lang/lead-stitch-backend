# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173
# APP_URL is the public URL of your backend server (used for email tracking links)
# For local development with email tracking, use ngrok or similar: https://ngrok.com/
# Example: APP_URL=https://your-ngrok-url.ngrok.io
# For production: APP_URL=https://api.yourdomain.com
APP_URL=http://localhost:5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lead_stitch
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRES_IN=7d

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API (Backup)
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Configuration (for Gemini API usage tracking)
# Optional: Set these to get accurate usage data from Google Cloud Monitoring API
# If not set, the system will use local tracking (tracks API calls made through this app)
# 
# Steps to set up:
# 1. Create a Google Cloud project (or use existing one where Gemini API is enabled)
# 2. Enable Cloud Monitoring API: https://console.cloud.google.com/apis/library/monitoring.googleapis.com
# 3. Create a service account with "Monitoring Viewer" role
# 4. Download the service account key JSON file
# 5. Set GOOGLE_CLOUD_PROJECT_ID to your project ID (e.g., "my-project-123456")
# 6. Set GOOGLE_APPLICATION_CREDENTIALS to the path of the JSON file (e.g., "./config/google-service-account.json")
#    Or use absolute path: "C:/path/to/your/service-account-key.json"
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id_here
GOOGLE_APPLICATION_CREDENTIALS=./config/google-service-account.json

# Apollo.io API - Required for profile discovery and email enrichment
# Get your API key from: https://app.apollo.io/#/settings/integrations/api
APOLLO_API_KEY=your_apollo_api_key_here

# AWS SES Configuration
AWS_SES_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Note: LinkedIn scraping service has been replaced with Apollo.io API
# Profile discovery now uses Apollo.io API directly - no separate service needed
# LINKEDIN_SCRAPING_SERVICE_URL is no longer required

# File Upload (if using S3)
AWS_S3_BUCKET=your_s3_bucket_name
AWS_S3_REGION=us-east-1

# Encryption Key for SMTP Passwords (AES-256)
# Generate a secure random key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_32_byte_encryption_key_here_change_in_production

# OTP Email Configuration (for Forgot Password)
# These settings are used to send OTP emails for password reset
# You can use Gmail, Outlook, or any SMTP service
OTP_SMTP_HOST=smtp.gmail.com
OTP_SMTP_PORT=587
OTP_SMTP_SECURE=false
OTP_SMTP_USER=your_email@gmail.com
OTP_SMTP_PASS=your_app_password_here
OTP_EMAIL_FROM=noreply@leadstitch.com
# Note: For Gmail, you need to use an App Password, not your regular password
# Generate App Password: https://myaccount.google.com/apppasswords

# Ticket System Email Notifications
# Uses the same OTP SMTP configuration above (OTP_SMTP_*)
# No additional configuration needed if OTP_SMTP_* is already set

# Sentry Error Tracking
# Get your DSN from https://sentry.io
# Install: npm install @sentry/node
SENTRY_DSN=your_sentry_dsn_here

